<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <EditText
        android:id="@+id/edt_txt_comment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_comment_title"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="5"
        android:maxLines="5"
        android:minLines="1"  />

    <EditText
        android:id="@+id/edt_txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_txt_comment_header"
        android:layout_marginTop="10dp"
        android:gravity="top|left"
        android:hint="@string/hint_comment"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="8"
        android:maxLines="10"
        android:minLines="1" />

    <View
        android:id="@+id/vDottedLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edt_txt_comment"
        android:layout_marginTop="10dp"
        android:background="@drawable/dotted"
        android:layerType="software" />

    <TextView
        android:id="@+id/txt_comment_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vDottedLine" />

</RelativeLayout>